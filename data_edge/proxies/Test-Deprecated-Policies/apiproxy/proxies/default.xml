<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <Flows>
        <Flow name="deprecated-flow">
            <Description>Flow with deprecated policies</Description>
            <Request>
                <Step>
                    <Name>XMLToJSON-Policy</Name>
                </Step>
                <Step>
                    <Name>SOAPValidation-Policy</Name>
                </Step>
                <Step>
                    <Name>AccessEntity-Policy</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>JSONToXML-Policy</Name>
                </Step>
                <Step>
                    <Name>StatsCollector-Policy</Name>
                </Step>
            </Response>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/test-deprecated</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>